{
    "manifest_version": 3,
    "name": "Phishing Detector",
    "version": "1.0",
    "description": "Analyzes URLs for potential phishing and malicious content",
    "permissions": [
      "activeTab",
      "storage",
      "webNavigation",
      "webRequest"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }